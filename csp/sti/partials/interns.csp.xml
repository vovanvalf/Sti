<?xml version="1.0" encoding="UTF-8"?>
<Export generator="Cache" version="25">
<CSP name="sti/partials/interns.csp" application="/csp/sti/" default="1"><![CDATA[
<div class="row-fluid">
	<div class="span1">
	</div>
	<div class="span10">
		<!-- Свой компонент - таблица -->
		 <stigrid style="border-radius: 4px 0 4px 4px;"
	    	grid="internsTable.state"
		    table-class="table table-bordered table-hover"
		    caption="'Стажеры'"
		    columns="internsTable.columns"
		    items="internsTable.items"
		    properties="internsTable.properties"
		    update-items="internsTable.loadItems(pageCurr, pageSize, sqlName, isDown, searchSqlName, searchText)"

		    page-curr="internsTable.pageCurr"
		    page-total="internsTable.pageTotal"
		    page-size="internsTable.pageSize"
		    navigator-visible="true"

		    selectable="true"
		    selected-items="internsTable.selectedItems"
		    multi-select-mode="false"
 			on-select="internsTable.onSelect(item)"
 			on-select-cell="internsTable.onSelectCell(item, property)"

 			action-column-visible="true"
		    action-column-icon="'fa fa-plus-circle'"
		    action-column-title="'Добавить'"
		    action-column-method="internsTable.add()"

		    first-row-action-icon="'fa fa-pencil'"
		    first-row-action-title="'Изменить'"
		    first-row-action-method="internsTable.edit(item)"
	    	
	    	second-row-action-icon="'fa fa-times'"
		    second-row-action-title="'Удалить'"
		    second-row-action-method="internsTable.remove(item)"
	    	
 			forcibly-update="internsTable.forciblyUpdate"
		/>
	</div>
	<div class="span1">
	</div>
</div>




<!-- Если стажер не выбран(т.е. selectedItems == udefined), то показывать сообщение {{internsTable.selectedItems}}-->
<div class="row-fluid" ng-hide="internsTable.selectedItems[0]" style="text-align: center;">
	<i>Выберите стажёра для отображения полной информации.</i>
</div>

<div class="row-fluid" ng-show="internsTable.selectedItems[0]!=null">
	 <tabset>
		<tab heading="{{'Информация'}}">
			<div class="span6">
				<p><span class="spnTitle" ng-bind="'Электронная почта'"></span>: <span ng-bind="internsTable.selectedItems[0].email"></span></p>
				<p><span class="spnTitle" ng-bind="'Телефон'"></span>: <span ng-bind="internsTable.selectedItems[0].phone"></span></p>
				<p><span class="spnTitle" ng-bind="'Скайп'"></span>: <span ng-bind="internsTable.selectedItems[0].skype"></span></p>
				<p><span class="spnTitle" ng-bind="'Резюме'"></span>: <span ng-bind="internsTable.selectedItems[0].resume"></span></p>
				<p><span class="spnTitle" ng-bind="'Кафедра'"></span>:</p> <!--Это свойство нужно реализовать на сервере, в классе university!-->
				<p><span class="spnTitle" ng-bind="'Факультет'"></span>:</p> <!--Это свойство нужно реализовать на сервере, в классе university!-->
				<p><span class="spnTitle" ng-bind="'Согласие на рассылку'"></span>: <span ng-bind="internsTable.selectedItems[0].agree"></span></p><!--Нужно ли оно здесь?--> 
            </div>
			<div class="span6">
				<p><span class="spnTitle" ng-bind="'Уровень английского'"></span>: <span ng-bind="internsTable.selectedItems[0].eng.value"></span></p>
				<p><span class="spnTitle" ng-bind="'Опыт Cache'"></span>: <span ng-bind="internsTable.selectedItems[0].cache"></span></p> 
                <p><span class="spnTitle" ng-bind="'Опыт Ensemble'"></span>: <span ng-bind="internsTable.selectedItems[0].ensemble"></span></p> 
				<p><span class="spnTitle" ng-bind="'Опыт DeepSee'"></span>: <span ng-bind="internsTable.selectedItems[0].deepsee"></span></p>
				<p><span class="spnTitle" ng-bind="'Оценка TET'"></span>: <span ng-bind="internsTable.selectedItems[0].tet"></span></p>
				<p><span class="spnTitle" ng-bind="'Оценка PET'"></span>: <span ng-bind="internsTable.selectedItems[0].pet.value"></span></p>
			</div>
		</tab>
	</tabset>
</div>
<br>
<!-- Инфо-сообщения -->
<stialert data="inalert" span-right="1" span-middle="10" span-left="1"/>]]></CSP>
</Export>
