<?xml version="1.0" encoding="UTF-8"?>
<Export generator="Cache" version="25">
<CSP name="sti/partials/company.csp" application="/csp/sti/" default="1"><![CDATA[
<!-- Страница редактирования/добавления компании-->
<div class="row-fluid">
	<form name="pageForm" ng-submit="page.submit()" body style="padding-top:50px;" >
	    <div class="span15">
			<div class="accordion">
			    <div class="accordion-group">
				  <tabset>
	  			 	<tab heading="{{'Основная информация'|localize}}">
					    <div class="accordion-heading">
							<a class="accordion-toggle" ng-bind="''"></a>
						</div>
						<div class="accordion-body">
							<div class="accordion-inner">
						 		<div class="row-fluid">
									<div class="span4">
										<label class="control-label" ng-bind="('Полное название'|localize)+'*'">:</label>
								 		<input class="span12" type="text" ng-model="page.company.fullName" required></input>
										<label class="control-label" ng-bind="'Аббревиатура'|localize">:</label>
										<input class="span12" type="text" ng-model="page.company.shortName"></input>
										<label class="control-label" ng-bind="('Адрес компании'|localize)+'*'">:</label>
										<input class="span12" type="text" ng-model="page.company.legalAddress" required></input>
										<label class="control-label" ng-bind="('Email')+'*'">:</label>
										<input class="span12" type="text" ng-model="page.company.mailAddress" required></input>
										<label class="control-label" ng-bind="'Web-страница'|localize">:</label>
										<input class="span12" type="text" ng-model="page.company.webSite"></input>
					    			</div>
								</div>
							</div>
						</div>
					</tab>
					<tab heading="{{'Контактное лицо'|localize}}">
						<div class="accordion-heading">
							<a class="accordion-toggle" ng-bind="''"></a>
						</div>
						<div class="accordion-body">
							<div class="accordion-inner">
						 		<div class="row-fluid">
									<div class="span4">
										<label class="control-label" ng-bind="('Фамилия'|localize)+'*'">:</label>
										<input class="span12" type="text" ng-model="page.company.contact.lastName" required></input>
						    			<label class="control-label" ng-bind="('Имя'|localize)+'*'">:</label>
										<input class="span12" type="text" ng-model="page.company.contact.firstName" required></input>
										<label class="control-label" ng-bind="'Отчество'|localize">:</label>
										<input class="span12" type="text" ng-model="page.company.contact.middleName"></input>
										<label class="control-label" ng-bind="'Телефон'|localize">:</label>
										<input class="span12" type="text" ng-model="page.company.contact.phone" ></input>
										<label class="control-label" ng-bind="('Электронный адрес'|localize)+'*'">:</label>
										<input class="span12" type="text" ng-model="page.company.contact.email" required></input>
									</div>
								</div>
							</div>
						</div>
				 	</tab>
				   </tabset>
				</div>
			</div>
			<div class="control-group">
			 	<div class="controls">
				   	<button type="submit" class="btn btn-success btn-small" ng-bind="page.formBtnSubmitName" ng-disabled="pageForm.$pristine"></button>
					<button type="button" class="btn btn-small" ng-click="page.cancel()" ng-bind="'Отмена'|localize"></button>		 	
			 	</div>
			</div>				
        </div>
    </form>
</div>
<stialert data="page.alert" span-right="4" span-middle="4" span-left="4"/>]]></CSP>
</Export>
