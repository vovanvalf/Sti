<?xml version="1.0" encoding="UTF-8"?>
<Export generator="Cache" version="25">
<CSP name="sti/partials/universities.csp" application="/csp/sti/" default="1"><![CDATA[
<!-- Университеты -->
<div class="row-fluid">
	<div class="span1">
	</div>
	<stigrid style="border-radius: 4px 0 4px 4px;"
	    	grid="universitiesTable.state"
		    table-class="table table-bordered table-hover"
		    caption="'Университеты'"
		    columns="universitiesTable.columns"
		    items="universitiesTable.items"
		    properties="universitiesTable.properties"
		    update-items="universitiesTable.loadItems(pageCurr, pageSize, sqlName, isDown, searchSqlName, searchText)"

		    page-curr="universitiesTable.pageCurr"
		    page-total="universitiesTable.pageTotal"
		    page-size="universitiesTable.pageSize"
		    navigator-visible="true"

		    selectable="true"
		    selected-items="universitiesTable.selectedItems"
		    multi-select-mode="universitiesTable.multiSelectMode"
 			on-select="universitiesTable.onSelect(item)"
 			on-select-cell="universitiesTable.onSelectCell(item, property)"

 			action-column-visible="true"
		    action-column-icon="'fa fa-plus-circle'"
		    action-column-title="'Добавить'"
		    action-column-method="universitiesTable.add()"

		    first-row-action-icon="'fa fa-pencil'"
		    first-row-action-title="'Изменить'"
		    first-row-action-method="universitiesTable.edit(item)"
	    	
	    	second-row-action-icon="'fa fa-times'"
		    second-row-action-title="'Удалить'"
		    second-row-action-method="universitiesTable.remove(item)"
	    	
 			forcibly-update="universitiesTable.forciblyUpdate"
		/>
	</div>
	<div class="span1">
	</div>
</div>
<br>
<div class="row-fluid" ng-show="page.ungrid.selected!=null">
	<div class="span1">
	</div>
			<div class="span10">
				<p><span class="spnTitle" ng-bind="'Сокращение'"></span>: <span ng-bind="page.ungrid.selected.shortName"></span></p>
				<p><span class="spnTitle" ng-bind="'Адрес'"></span>: <span ng-bind="page.ungrid.selected.address"></span></p>
				<p><span class="spnTitle" ng-bind="'Сайт'"></span>: <span ng-bind="page.ungrid.selected.web"></span></p>
				<!--Сделать отдельную таблицу для инфо куратора!-->
				<p><span class="spnTitle" ng-bind="'Куратор'"></span>: <span ng-bind="page.ungrid.selected.curator.lastName"></span></p>
				<!--Сделать список контактов и инфо таблицу!-->
				<p><span class="spnTitle" ng-bind="'Контакты'"></span>:</p> 
			</div>
			
	<div class="span1">
	</div>
</div>
<!-- Если универ не выбран(т.е. selected == udefined), то показывать сообщение -->
<div class="row-fluid" ng-hide="page.ungrid.selected" style="text-align: center;">
	<i>Выберите университет для отображения полной информации.</i>
</div>

<br>
<!-- Инфо-сообщения -->
<stialert data="page.unalert" span-right="1" span-middle="10" span-left="1"/>
]]></CSP>
</Export>
